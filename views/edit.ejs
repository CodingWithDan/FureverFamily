<%- include('partials/header') -%>
<h2  class="d-flex justify-content-center">Edit Post</h2>
<div class="d-flex justify-content-center">
    
    <form action="/post/<%= posts._id%>" method="POST">
        <input type="hidden" name="_method" value="PUT">

      <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= posts.name %>">
      </div>
      <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" class="form-control" id="age" name="age" value="<%= posts.age %>">
      </div>
      <div class="mb-3">
        <label for="gender" class="form-label">Gender</label>
        <input type="text" class="form-control" id="gender" name="gender" value="<%= posts.gender %>">
      </div>
      <div class="mb-3">
      <label for="breed" class="form-label">Breed</label>
      <input type="text" class="form-control" id="breed" name="breed" value="<%= posts.breed %>">
      </div>
      <div class="mb-3">
        <label for="color" class="form-label">Color</label>
        <input type="text" class="form-control" id="color" name="color" value="<%= posts.color %>">
      </div>
      <div class="mb-3">
        <label for="bodySize" class="form-label">Size</label>
        <input type="text" class="form-control" id="bodySize" name="bodySize" value="<%= posts.bodySize %>">
      </div>
      <div class="mb-3">
        <label for="hairLength" class="form-label">Hair Length</label>
        <input type="text" class="form-control" id="hairLength" name="hairLength" value="<%= posts.hairLength %>">
      </div>
     
      <div class="mb-3">
        <label for="spayedNeutered" class="form-label">Spayed/Neutered?</label>
        <input type="text" class="form-control" id="spayedNeutered" name="spayedNeutered" value="<%= posts.spayedNeutered %>">
      </div>
      <div class="mb-3">
        <label for="vaccinations" class="form-label">Vaccinations</label>
        <input type="text" class="form-control" id="vaccinations" name="vaccinations" value="<%= posts.vaccinations %>">
      </div>
      <div class="mb-3">
        <label for="specialNeeds" class="form-label">Special Needs?</label>
        <input type="text" class="form-control" id="specialNeeds" name="specialNeeds" value="<%= posts.specialNeeds %>">
      </div>

      <div class="mb-3">
        <label for="houseTrained" class="form-label">House Trained?</label>
        <input type="text" class="form-control" id="houseTrained" name="houseTrained" value="<%= posts.houseTrained %>">
      </div>
      <div class="mb-3">
        <label for="goodWithKids" class="form-label">Friendly With Kids?</label>
        <input type="text" class="form-control" id="goodWithKids" name="goodWithKids" value="<%= posts.goodWithKids %>">
      </div>
      <div class="mb-3">
        <label for="goodWithAnimals" class="form-label">Friendly With Other Animals?</label>
        <input type="text" class="form-control" id="goodWithAnimals" name="goodWithAnimals" value="<%= posts.goodWithAnimals %>">
      </div>

      <div class="mb-3">
        <label for="adoptionCenter" class="form-label">Adoption Center</label>
        <input type="text" class="form-control" id="adoptionCenter" name="adoptionCenter" value="<%= posts.adoptionCenter %>">
      </div>
      <div class="mb-3">
        <label for="phoneNumber" class="form-label">Contact Number</label>
        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= posts.phoneNumber %>">
      </div>
      <div class="mb-3">
        <label for="sellerEmail" class="form-label">Email</label>
        <input type="text" class="form-control" id="sellerEmail" name="sellerEmail" value="<%= posts.sellerEmail %>">
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="location" value="<%= posts.location %>">
      </div>

      <div class="mb-3">
        <label for="caption" class="form-label">Tell Us About Your Furry Baby</label>
        <input class="form-control" id="caption" name="caption" value="<%= posts.caption %>"></input>
      </div>
     

      
      <!-- <button type="submit" class="btn btn-primary  d-flex justify-content-center col-6 mb-5 text-center" value="Save">Submit</button> -->

      <div class="row">
        <input type="submit" value="Save" class="btn">
        <a href="/profile" class="btn orange">Cancel</a>
      </div> 

    </form>
  </div>

  <%- include('partials/footer') -%>